<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="items.xsd">

	<collectiontypes>
		<collectiontype code="GenderList" elementtype="Gender" autocreate="true" generate="true" type="list"/>
		<collectiontype code="EventTypeList" elementtype="EventTypeEnum" autocreate="true" generate="true" type="list"/>
		<collectiontype code="SwatchColorSet" elementtype="SwatchColorEnum" autocreate="true" generate="true" type="set"/>
	</collectiontypes>


	<enumtypes>
		<enumtype generate="true" code="SwatchColorEnum" autocreate="true" dynamic="true">
			<value code="BLACK"/>
			<value code="BLUE"/>
			<value code="BROWN"/>
			<value code="GREEN"/>
			<value code="GREY"/>
			<value code="ORANGE"/>
			<value code="PINK"/>
			<value code="PURPLE"/>
			<value code="RED"/>
			<value code="SILVER"/>
			<value code="WHITE"/>
			<value code="YELLOW"/>
		</enumtype>
		
		<enumtype generate="true" code="EventTypeEnum" autocreate="true" dynamic="true">
			<value code="WEDDING"/>
			<value code="BIRTHDAY"/>
			<value code="ANNIVERSARY"/>
			<value code="CORPORATE"/>
			<value code="FESTIVAL"/>
			<value code="TRADITINAL"/>
		</enumtype>
	</enumtypes>

	<itemtypes>

		<!-- Add your item definitions here -->
		<typegroup name="Service">
			<itemtype code="ServiceProduct" extends="Product"
			          autocreate="true" generate="true"
			          jaloclass="gl.utsav.accelerator.core.jalo.ServiceProduct">
				<description>Service product extension that contains additional attributes.</description>
				<attributes>
					<attribute qualifier="numberOfConsultants" type="java.lang.Integer">
						<description>Number of Consultants</description>
						<persistence type="property"/>
					</attribute>
					<attribute qualifier="eventTypes" type="EventTypeList">
						<description>Number of Consultants</description>
						<persistence type="property"/>
					</attribute>
				</attributes>
			</itemtype>
			
			<itemtype code="Event" autocreate="true" generate="true" extends="GenericItem"
			          jaloclass="gl.utsav.accelerator.core.jalo.Event">
			    <deployment table="Events" typecode="10221" />
				<attributes>
					<attribute qualifier="eventType" type="EventTypeEnum">
						<description>Type of Events</description>
						<persistence type="property"/>
					</attribute>
				</attributes>
			</itemtype>
		</typegroup>

	    <!-- Item definition for Category Grid Component -->
	    <typegroup name="CategoryComponentForHomePage">
			<itemtype code="CategoryGridComponent" extends="SimpleCMSComponent"
			          autocreate="true" generate="true"
			          jaloclass="gl.utsav.accelerator.core.jalo.CategoryGridComponent">
				<description>Component for the display of Categories on the Home Page.</description>
				<attributes>
					<attribute qualifier="CategoryItemsList" type="CategoryList">
						<description>List of Categories</description>
						<persistence type="property"/>
					</attribute>
					<attribute qualifier="numberOfCategories" type="java.lang.Integer">
						<description>Number of Categories</description>
						<persistence type="property"/>
					</attribute>
				</attributes>
			</itemtype>
	     </typegroup>
	     <!-- Item definition for Category Grid Component -->

	</itemtypes>
</items>
